# .editorconfig
[*]
# Indentation and spacing
indent_style=space
indent_size=2
tab_width=2
trim_trailing_whitespace=true

# New line preferences
end_of_line=lf
insert_final_newline=true

# Charset: Use UTF-8 encoding
charset=utf-8

[*.md]
trim_trailing_whitespace=false

[*.{yml,yaml}]
indent_size=2

[Makefile]
indent_style=tab